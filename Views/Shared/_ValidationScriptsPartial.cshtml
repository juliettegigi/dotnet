<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



<script>
    $.validator.addMethod("FechaNoMenorQueLaActual", function(value, element) {
        var selectedDate = new Date(value);
        var currentDate = new Date();
        return selectedDate > currentDate;
    }, "La fecha debe ser mayor que la fecha actual.");



     $(document).ready(function() {
        // Aplicar la regla de validación personalizada al input con el ID "ApartirDe"
        $("#ApartirDe").rules("add", {
            FechaNoMenorQueLaActual: true
        });
    });
</script>