@model IEnumerable<InmobiliariaGutierrez.Models.VO.Inquilino>
@{
    ViewData["Title"] = "Home Page";
}

<div>
	<h1 class="display-4">Lista de Inquilinos</h1>
	<h4><a asp-action="Editar">Crear</a></h4>
	

	<table id="example" class="display" style="width:100%">
        <thead>
            <tr>
				<th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>DNI</th>
                <th>Telefono</th>
				<th></th>
            </tr>
		</thead>
        <tbody>
			@foreach (var item in Model){
            		<tr>
            		    <td>@item.Id</td>
            		    <td>@item.Nombre</td>
            		    <td>@item.Apellido</td>
            		    <td>@item.DNI</td>
            		    <td>@item.Telefono</td>
						<td class="d-flex">
							 <form asp-action="Editar" asp-route-id="@item.Id" method="post">
   						         <button type="submit"><i class="bi bi-pencil-square"></i></button>
   						     </form>
   						     <form asp-action="Eliminar" asp-route-id="@item.Id" method="post">
   						         <button type="submit"  class="mx-2 "><i class="bi bi-trash"></i></button>
   						     </form>
						</td>
            		</tr>
           }
		</tbody>	
</div>


